<% wrap_layout :layout do %>
  <article class="card">
    <!-- Article shows tags in top right -->
    <ul class="card-tags">
        <% current_article.tags.each do |tag| %>
          <li>
            <%= link_to "#{tag}", tag_path(tag),
                :class => "badge no-hvr" %>
          </li>
        <% end %>
    </ul>

    <%= yield %>
  </article>
<% end %>