<aside id="sidebar">

  <div id="comic">
    <%= image_tag 'pair-of-ducks.png', :alt => "Paradox" %>
    <h5>Paradox</h5>
  </div>

  <hr class="fractal">

  <div id="recent-articles">
    <h5>Recent Articles</h5>
    <ul class="fa-ul">
      <% blog.articles[0...5].each do |article| %>
        <li>
          <i class="fa-li fa fa-chevron-right"></i>
          <%= link_to article.title, article %>
        </li>
      <% end %>
    </ul>
  </div>

  <div id="all-tags">
    <h5>Tags</h5>
    <ul>
      <% blog.tags.each do |tag, articles| %>
        <li>
          <%= link_to "#{tag} (#{articles.size})", tag_path(tag),
              :class => "badge no-hvr" %>
        </li>
      <% end %>
    </ul>
  </div>

</aside>
