<aside id="sidebar">

  <hr class="fractal">

  <div id="recent-articles">
    <h5>Recent Posts</h5>
    <ul class="fa-ul">
      <% blog.articles.reject { |r| r.respond_to?(:slug) && r.slug.include?('jots') }[0...5].each do |post| %>
        <li>
          <i class="fa-li fa fa-chevron-right"></i>
          <%= link_to post.title, post %>
        </li>
      <% end %>
    </ul>
  </div>

  <hr class="fractal">

  <div id="all-tags">
    <h5><%= link_to 'Topics', '/topics.html' %></h5>
    <ul class="list-none">
      <!-- Add all Article tags -->
      <% blog.tags.each do |tagpath, articles| %>
        <li class="breadcrumb">
          <% tagpath.split('>').each do |tag| %>
            <%= link_to(tag,tag_path(tag), class: "#{tag}-tag") %>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</aside>
