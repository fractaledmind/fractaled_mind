<aside id="sidebar">

  <div id="comic">
  <% comic_post = newest_comic_post() %>
  <% if !comic_post.nil? %>
    <% link_to comic_post['url'] do %>
      <%= image_tag 'pair-of-ducks.png', :alt => "Paradox" %>
    <% end %>
    <h5>The Pair of Ducks Paradox</h5>
  <% end %>
  </div>

  <hr class="fractal">

  <div id="recent-articles">
    <h5>Recent Articles</h5>
    <ul class="fa-ul">
      <% blog.articles[0...5].each do |article| %>
        <li>
          <i class="fa-li fa fa-chevron-right"></i>
          <%= link_to article.title, article %>
        </li>
      <% end %>
    </ul>
  </div>

  <div id="all-tags">
    <h5>Tags</h5>
    <ul>
      <!-- Add all Article tags -->
      <% blog.tags.each do |tag, articles| %>
        <li>
          <%= link_to "#{tag} (#{articles.size})", tag_path(tag),
              :class => "badge no-hvr", :id => "#{tag}" %>
        </li>
      <% end %>

      <!-- Add all Project tags -->
      <% project_tags().each do |tag, articles| %>
        <%= link_to "#{tag} (#{articles.size})", '/topics/' + tag,
              :class => "badge no-hvr", :id => "#{tag}" %>
      <% end %>
    </ul>
  </div>

</aside>
