// Custom (Base16 Ocean) Rouge color scheme
<%= Rouge::Themes::Base16.mode(:dark).render(scope: '.highlight') %>

// Customize code style
.highlight, .highlight .w {
	// TEXT
	font-family: map-get($font-stack, code);
	font-size: 0.9rem;
	overflow:auto;
	// ELEMENT
  border-radius: 3px;
  margin:1rem;
}

.highlight table td.gutter {
	background-color: $lighter;
	color: $darker;
}
