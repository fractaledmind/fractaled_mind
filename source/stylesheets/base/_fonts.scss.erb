/* CUSTOM FONTS */

// fractal icon font
@font-face {
  font-family: "fractal";
  src: url("<%= url_for '/fonts/fractal/fractal.eot' %>"); /* IE9 */
  src: url("<%= url_for '/fonts/fractal/fractal.eot?35233069#iefix' %>") format('embedded-opentype'),  /* IE6-IE8 */
       url("<%= url_for '/fonts/fractal/fractal.woff' %>") format('woff'), /* Pretty Modern Browsers */
       url("<%= url_for '/fonts/fractal/fractal.ttf' %>") format('truetype'), /* Safari, Android, iOS */
       url("<%= url_for '/fonts/fractal/fractal.svg' %>") format('svg'); /* Legacy iOS */
  font-weight: normal;
  font-style: normal;
}

// Inconsolata monospace font
@font-face {
  font-family: "Inconsolata";
  src: url("<%= url_for '/fonts/inconsolata/Inconsolata.eot'  %>"); /* IE9 */
  src: url("<%= url_for '/fonts/inconsolata/Inconsolata.eot?#iefix' %>") format("embedded-opentype"), /* IE6-IE8 */
  url("<%= url_for '/fonts/inconsolata/Inconsolata.woff' %>") format("woff"), /* chrome, firefox */
  url("<%= url_for '/fonts/inconsolata/Inconsolata.ttf' %>") format("truetype"), /* chrome, firefox, opera, Safari, Android, iOS 4.2+ */
  url("<%= url_for '/fonts/inconsolata/Inconsolata.svg#Inconsolata' %>") format("svg"); /* iOS 4.1- */
  font-style: normal;
  font-weight: normal;
}

