/* CUSTOM FONTS */

// fractal icon font
@include font-face(
  "fractal",
  "fractal/fractal",
  normal,
  normal,
  $asset-pipeline: true,
  $file-formats: eot woff ttf svg otf
);

// Inconsolata monospace font
@include font-face(
  "Inconsolata",
  "inconsolata/Inconsolata",
  normal,
  normal,
  $asset-pipeline: true,
  $file-formats: eot woff ttf svg otf
);

@mixin font-family($name, $weight-list: null, $exts: eot woff2 woff ttf svg) {
  // Regular
  @each $label, $weight in $weight-list {
    @include font-face(
      $name,
      "#{$name}/#{$name}-#{$label}",
      $weight,
      normal,
      $asset-pipeline: true,
      $file-formats: $exts
    );
  }
  // Italic
  @each $label, $weight in $weight-list {
    @include font-face(
      $name,
      "#{$name}/#{$name}-#{$label}Italic",
      $weight,
      italic,
      $asset-pipeline: true,
      $file-formats: $exts
    );
  }
}

$weight-map: (
  ('Light', 200),
  ('Regular', 400),
  ('Medium', 500),
  ('Bold', 700),
  ('Black', 900),
);

@include font-family("SkolaSans", $weight-map, $exts: eot woff ttf svg otf);

// SkolaSansCn title font
@font-face {
  font-family: "SkolaSansCn";
  src: url("<%= url_for '/fonts/SkolaSans/SkolaSansCn/SkolaSansCn-Bold.eot' %>"); /* IE9 */
  src: url("<%= url_for '/fonts/SkolaSans/SkolaSansCn/SkolaSansCn-Bold.eot?#iefix' %>") format("embedded-opentype"), /* IE6-IE8 */
  url("<%= url_for '/fonts/SkolaSans/SkolaSansCn/SkolaSansCn-Bold.woff' %>") format("woff"), /* chrome, firefox */
  url("<%= url_for '/fonts/SkolaSans/SkolaSansCn/SkolaSansCn-Bold.ttf' %>") format("truetype"), /* chrome, firefox, opera, Safari, Android, iOS 4.2+ */
  url("<%= url_for '/fonts/SkolaSans/SkolaSansCn/SkolaSansCn-Bold.svg#SkolaSans' %>") format("svg"); /* iOS 4.1- */
  font-style: normal;
  font-weight: bold;
}
