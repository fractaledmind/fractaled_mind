---
pageable: true
per_page: 12
---

<div class="card" id="topic-page">
  <h2 id="title">Projects tagged '<%= tag %>'</h2>

  <% if paginate && num_pages > 1 %>
    <p>Page <%= page_number %> of <%= num_pages %></p>

    <% if prev_page %>
      <p><%= link_to 'Previous page', prev_page %></p>
    <% end %>
  <% end %>

  <ul class="fa-ul">
    <% projects.each do |project| %>
      <li>
        <i class="fa-li fa fa-chevron-right"></i>
        <%= link_to project.title, '/projects/' + project.slug %>
      </li>
    <% end %>
  </ul>

  <% if paginate %>
    <% if next_page %>
      <p><%= link_to 'Next page', next_page %></p>
    <% end %>
  <% end %>
</div>