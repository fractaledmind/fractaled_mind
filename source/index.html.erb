---
pageable: true
per_page: 10
---
<% if paginate && num_pages > 1 %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>

<ul class="cards">
  <% page_articles.each_with_index do |article, i| %>
    <li class="card">
      <div class="card-header">
        <h3><%= link_to article.title, article %></h3>
        <h5><%= article.date.strftime('%d %B %Y') %></h5>
      </div>
      <hr>
      <div class="card-copy">
      <p><%= article.summary %></p>
      <div class="read"><%= link_to 'Read this article <i class="fa fa-chevron-circle-right"></i>', article %></div>
      </div>
    </li>
  <% end %>
</ul>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>
