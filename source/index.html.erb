---
pageable: true
per_page: 10
---
<ul class="cards">
  <% page_articles.each do |article| %>
    <%= partial "partials/card_li",
                locals: { item: article } %>
  <% end %>
</ul>

<% if paginate && num_pages > 1 %>
  <div class="pagination">
    <%= pagination_links(articles.count, per_page) %>
  </div>
<% end %>
