<%
entries = []
blog.articles.each do |article|
  entry = {
    :title => article.title,
    :url => article.url,
    :content => article.body,
    :type => 'article'
  }
  entries << entry
end
data.projects.each do |slug, project|
  entry = {
    :title => project.title,
    :url => 'projects/' + slug,
    :content => markdownify(project.readme),
    :type => 'project'
  }
  entries << entry
end
%><%=entries.to_json %>